<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserFindServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.UserFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAddServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.QuestionAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionfindServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.QuestionfindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.QuestionDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestioninformationServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.QuestioninformationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionupdateServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.QuestionupdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestiontestServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.QuestiontestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionScoreServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.QuestionScoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionScoreServlet</servlet-name>
        <url-pattern>/question/score</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestiontestServlet</servlet-name>
        <url-pattern>/question/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionupdateServlet</servlet-name>
        <url-pattern>/question/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestioninformationServlet</servlet-name>
        <url-pattern>/question/information</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <url-pattern>/question/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionfindServlet</servlet-name>
        <url-pattern>/question/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAddServlet</servlet-name>
        <url-pattern>/question/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserFindServlet</servlet-name>
        <url-pattern>/user/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.bjpowernode.OneListener</listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>onefilter</filter-name>
        <filter-class>com.bjpowernode.filter.onefilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>onefilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>